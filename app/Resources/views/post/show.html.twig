{% extends 'base.html.twig' %}

{% block body %}
    <h1>сообщения</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ post.userName }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ post.eMail }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ post.text }}</td>
            </tr>
            <tr>
                <th>Ip</th>
                <td>{{ post.ip }}</td>
            </tr>
            <tr>
                <th>Useragent</th>
                <td>{{ post.userAgent }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if post.createdAt %}{{ post.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('post_index') }}">Назад к списку</a>
        </li>
        <li>
            <a href="{{ path('post_edit', { 'id': post.id }) }}">Редактировать</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Удалить">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
